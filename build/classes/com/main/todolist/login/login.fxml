<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: grey;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.main.todolist.login.LoginController">
   <children>
      <Label layoutX="53.0" layoutY="27.0" text="Имя пользователя:">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="86.0" text="Пароль пользователя:">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
      <TextField fx:id="usernameTF" layoutX="300.0" layoutY="23.0" prefHeight="44.0" prefWidth="276.0" promptText="Введите имя пользователя...">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passwordPF" layoutX="300.0" layoutY="82.0" prefHeight="44.0" prefWidth="276.0" promptText="Введите пароль...">
         <font>
            <Font size="20.0" />
         </font>
      </PasswordField>
      <Button fx:id="enterButton" layoutX="14.0" layoutY="140.0" mnemonicParsing="false" onAction="#enterButtonPressed" prefHeight="54.0" prefWidth="262.0" style="-fx-background-color: yellow;" text="Вход" textFill="#1d7929">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
      <Button fx:id="deleteAccountButton" layoutX="14.0" layoutY="200.0" mnemonicParsing="false" onAction="#deleteAccountButtonPressed" prefHeight="54.0" prefWidth="262.0" style="-fx-background-color: yellow;" text="Удалить аккаунт" textFill="RED">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
      <CheckBox fx:id="deleteInformationCB" layoutX="314.0" layoutY="212.0" mnemonicParsing="false" onAction="#deleteInformationCBPressed" prefHeight="30.0" prefWidth="262.0" text="Удаление информации" textFill="#ff0900">
         <font>
            <Font size="20.0" />
         </font>
      </CheckBox>
      <Label fx:id="warningsLabel" layoutX="14.0" layoutY="350.0" prefHeight="36.0" prefWidth="582.0" text="Уведомления" textFill="#ff0404">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Button fx:id="createAccountButton" layoutX="314.0" layoutY="140.0" mnemonicParsing="false" onAction="#createAccountButtonPressed" prefHeight="54.0" prefWidth="262.0" style="-fx-background-color: yellow;" text="Регистрация" textFill="#0011fc">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
